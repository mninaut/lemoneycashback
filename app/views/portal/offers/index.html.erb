<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead  class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Status</th>

      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @portal_offers.each do |portal_offer| %>
      <tr>
        <td><%= portal_offer.id %></td>
        <td><%= portal_offer.advertiser_name %></td>
        <td><%= link_to portal_offer.url, portal_offer.url%></td>
        <td><%= portal_offer.description %></td>
        <td><%= status(portal_offer) %></td>
      
        <td><%= link_to 'Show', portal_offer %></td>
        <td><%= link_to 'Edit', edit_portal_offer_path(portal_offer) %></td>
        <td><%= link_to 'Destroy', portal_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Portal Offer', new_portal_offer_path, class: 'btn btn-primary' %>
